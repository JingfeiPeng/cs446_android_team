<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cs446_meal_planner">

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CS446_Meal_Planner"
        android:requestLegacyExternalStorage="true">
        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/activity_report" />

        <activity
            android:name=".CalendarActivity"
            android:label="@string/Calender" />
        <activity
            android:name=".RecipeOverviewActivity"
            android:label="@string/title_activity_view_recipe"
            android:theme="@style/Theme.CS446_Meal_Planner" />
        <activity
            android:name=".RecipeListActivity"
            android:label="@string/view_recipes"
            android:theme="@style/Theme.CS446_Meal_Planner" />
        <activity
            android:name=".RecipeCreationActivity"
            android:label="@string/title_activity_recipe_creation"
            android:theme="@style/Theme.CS446_Meal_Planner" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ReportActivity"
            android:label="@string/generate_report"
            android:theme="@style/Theme.CS446_Meal_Planner" />
        <activity
            android:name=".CalorieReportActivity"
            android:label="@string/generate_calorie_report"
            android:theme="@style/Theme.CS446_Meal_Planner" />

        <activity
            android:name=".ReportDateActivity"
            android:label="Pick Report Date1"
            android:theme="@style/Theme.CS446_Meal_Planner" />




    </application>

</manifest>